  "peerDependenciesMeta": {
    "react-dom": {
      "optional": true
    },
    "react-native": {
      "optional": true
    }
  },
  "devDependencies": {
    "@adi/common": "^0.1.0",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.2.21",
