{
  "name": "@adi/react",
  "version": "0.1.0",
  "description": "Another DI system for TS/JS (@react)",
  "author": "Maciej Urba≈Ñczyk",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/magicmatatjahu/adi"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "ioc",
    "di",
    "dependency injection",
    "inversion of control",
    "js",
    "javascript",
    "ts",
    "typescript",
    "react",
    "reactjs"
  ],
  "main": "lib/index.js",
