{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "strictPropertyInitialization": false,
    "removeComments": true,
    "noLib": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES2019",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "lib",
    "lib": ["es7"]
  },
  "exclude": ["node_modules"]
}